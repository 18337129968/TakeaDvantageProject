<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <RelativeLayout
        android:id="@+id/watch_advertisement_picture_rl"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/exchange_chooseadress_dialog_inbottom"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/watch_advertisement_picture"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/earn_points_bac"
            android:padding="10dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_below="@+id/watch_advertisement_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/watch_advertisement"
            android:gravity="center"
            android:textColor="#939393"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/detail_describe_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_rl"
        android:layout_below="@id/watch_advertisement_picture_rl"
        android:layout_marginTop="10dp"
        android:fadingEdge="none"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/commodity_describe_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="商品描述"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/commodity_describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/commodity_describe_title"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/enterprise_brief_introduction_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/commodity_describe"
                android:layout_marginTop="10dp"
                android:text="企业简介"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/enterprise_brief_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/enterprise_brief_introduction_id"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/btn_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/exchange_chooseadress_dialogchosed_column_inbottom"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/consult"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_click2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/zixun"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/get_integral"
            android:layout_width="230dp"
            android:layout_height="50dp"
            android:layout_below="@id/consult"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_click2"
            android:gravity="center"
            android:text="做任务得拍币"
            android:textColor="@color/edittext_color"
            android:textSize="@dimen/edittext_size" />
    </RelativeLayout>

</RelativeLayout>