<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chongzhishibai_btn_duihuakuang"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <TextView
        android:id="@+id/tv_top"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="充值"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/dialog_title_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="1元=100金币"
            android:textSize="@dimen/edittext_size" />

        <TextView
            android:id="@+id/have_gold_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="当前金币500"
            android:textColor="@color/edittext_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/edittextbg"
            android:ems="10"
            android:inputType="number"
            android:maxLength="10"
            android:numeric="integer"
            android:paddingLeft="15dp"
            android:textColor="#666666"
            android:textSize="18sp" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" >

            <TextView
                android:id="@+id/dialog_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@anim/dialog_btn_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/edittext_color"
                android:textSize="@dimen/edittext_size" />

            <TextView
                android:id="@+id/dialog_ok_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@anim/dialog_btn_selector"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/edittext_color"
                android:textSize="@dimen/edittext_size" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>