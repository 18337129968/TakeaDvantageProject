<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color" >

    <include
        android:id="@+id/app_head"
        layout="@layout/myhead" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_head" 
        android:background="@drawable/news_des_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dip">

            <TextView
                android:id="@+id/news_des_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#99ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/news_des_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_below="@id/news_des_title"
                android:textColor="@color/grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/news_des_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_below="@id/news_des_des"
                android:gravity="right"
                android:textColor="@color/grey"
                android:textSize="14sp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>