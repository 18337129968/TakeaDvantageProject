<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/more_address_add_ll"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@color/background_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_address_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="新增收货地址"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <ListView
        android:id="@+id/add_address_lv"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/more_address_add_ll"
        android:layout_weight="8"
        android:overScrollMode="never" 
        android:divider="@null" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="2" >

        <Button
            android:id="@+id/more_address_confirm"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            
            android:background="@drawable/come_btn"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>

</LinearLayout>