<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/firm_order_img"
            android:layout_width="120dp"
            android:layout_height="85dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/firm_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/firm_order_img"
            android:text="商品名称:"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/winning_record_goods_prize_levex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firm_order_detail"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/firm_order_img"
            android:text="奖级："
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/winning_record_goods_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/winning_record_goods_prize_levex"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/firm_order_img"
            android:text="消耗拍币："
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品介绍:"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/winning_record_goods_details_product_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:text="苹果(apple) iPhone 6 plus(A1524) 16GB 金色 移动电信4G手机"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/winning_recordz_goods_lottery_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="开奖日期："
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/winning_recordz_goods_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货时间："
            android:textSize="13dp" />

        <TextView
            android:id="@+id/winning_record_goods_isfinish"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:text="已完成收货"
            android:textColor="@color/red"
            android:textSize="13dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp"
            android:background="@color/background_color"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="分享"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/winning_record_goods_weixinfriends_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/share_btn_selector"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_weixin"
                    android:gravity="center"
                    android:text="微信好友" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/winning_record_goods_friendsshare_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/share_btn_selector"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_friendsshare"
                    android:gravity="center"
                    android:text="微信朋友圈" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/winning_record_goods_QQ_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/share_btn_selector"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_qq"
                    android:gravity="center"
                    android:text="QQ好友" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/winning_record_goods_Qzone_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/share_btn_selector"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_qzone"
                    android:gravity="center"
                    android:text="QQ空间" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/winning_record_goods_sina_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/share_btn_selector"
                android:gravity="center" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/icon_weibo"
                    android:gravity="center"
                    android:text="新浪微博" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>