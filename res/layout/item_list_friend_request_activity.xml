<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/my_list"
    android:focusable="false"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/friend_request_directReference"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="直接推荐人" />

    <TextView
        android:id="@+id/friend_request_inderectReference"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="间接推荐人/拍币" />

    <TextView
        android:id="@+id/friend_request_points"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="获得拍币/拍币" />

</LinearLayout>