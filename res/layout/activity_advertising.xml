<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/advertising"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="广告名称"
                android:textSize="@dimen/edittext_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/advert_name_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:drawableBottom="@drawable/bg_line"
                    android:gravity="center|left"
                    android:hint="必填"
                    android:maxLength="20"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center|left|bottom"
            android:text="广告图片"
            android:textSize="@dimen/edittext_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center|left" >

            <ImageView
                android:id="@+id/advertising_img1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/btn_addpic"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/advertising_img2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/btn_addpic"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/advertising_img3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/btn_addpic"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/advertising_img4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/btn_addpic"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/advertising_img5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/btn_addpic"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingRight="2dp" >

                <ImageView
                    android:id="@+id/advert_add_pic_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/btn_addpic" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="广告语"
                android:textSize="@dimen/edittext_size" />

            <EditText
                android:id="@+id/advert_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#00000000"
                android:drawableBottom="@drawable/bg_line"
                android:ems="10"
                android:gravity="center|left"
                android:hint="必填"
                android:maxLength="50"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="1dp" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="核心记忆词"
                android:textSize="@dimen/edittext_size" />

            <EditText
                android:id="@+id/important_words"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#00000000"
                android:drawableBottom="@drawable/bg_line"
                android:ems="10"
                android:gravity="center|left"
                android:hint="必填"
                android:maxLength="20"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <LinearLayout
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="内容简介"
                    android:textSize="@dimen/edittext_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/content_synopsis"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableBottom="@drawable/bg_line"
                    android:ems="10"
                    android:gravity="center|left"
                    android:hint="必填"
                    android:maxLength="100"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" >
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="显示电话"
                android:textSize="@dimen/edittext_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" >

                <EditText
                    android:id="@+id/show_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#00000000"
                    android:drawableBottom="@drawable/bg_line"
                    android:ems="10"
                    android:gravity="center|left"
                    android:hint="选填"
                    android:inputType="phone"
                    android:maxLength="12"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/select_show_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="显示地址"
                android:textSize="@dimen/edittext_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3" >

                <EditText
                    android:id="@+id/show_address"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#00000000"
                    android:drawableBottom="@drawable/bg_line"
                    android:ems="10"
                    android:gravity="center|left"
                    android:hint="选填"
                    android:maxLength="50"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/select_show_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="问题设置"
                android:textSize="@dimen/edittext_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp" >

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="问题类型:"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:paddingLeft="5dp"
                    android:text="单选"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp" >

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:text="问题描述:"
                    android:textSize="17sp" />

                <EditText
                    android:id="@+id/question_explain"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableBottom="@drawable/bg_line"
                    android:ems="10"
                    android:gravity="center|left"
                    android:hint="必填"
                    android:paddingLeft="5dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp" >

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="选项1:"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <EditText
                        android:id="@+id/answers1_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:drawableBottom="@drawable/bg_line"
                        android:ems="10"
                        android:hint="必填"
                        android:paddingLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/select_answers1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/answearquestion_input_no_choose" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp" >

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="选项2:"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <EditText
                        android:id="@+id/answers2_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:drawableBottom="@drawable/bg_line"
                        android:ems="10"
                        android:hint="必填"
                        android:paddingLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/select_answers2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/answearquestion_input_no_choose" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp" >

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="88dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="选项3:"
                    android:textSize="17sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <EditText
                        android:id="@+id/answers3_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:drawableBottom="@drawable/bg_line"
                        android:ems="10"
                        android:hint="必填"
                        android:paddingLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/select_answers3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/answearquestion_input_no_choose" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="发布广告即默认同意"
                android:textColor="#652C3B"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="《拍得利广告商家服务合同》"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/commit_check_btn"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_click2"
            android:gravity="center"
            android:text="提交审核"
            android:textColor="@color/edittext_color"
            android:textSize="@dimen/edittext_size" />
    </LinearLayout>

</ScrollView>