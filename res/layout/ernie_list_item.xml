<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:background="@drawable/img_show_box"
    android:paddingBottom="8dp" >

    <TextView
        android:id="@+id/earn_points_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/img_black_tiao"
        android:gravity="center"
        android:maxEms="11"
        android:singleLine="true"
        android:text="房间1"
        android:textColor="@color/zjf_gridview_item_title_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/earn_points_picture"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/earn_points_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/meal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/earn_points_picture"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:text="B套餐  IPHONE6PLUS"
        android:textColor="@color/zjf_gridview_item_title_color"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/img_black_tiao" 
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >
        
          <Button
              android:id="@+id/earn_points_number"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_marginBottom="2dp"
              android:layout_marginRight="15dp"
              android:background="@drawable/come_btn"
              android:gravity="center|right"
              android:padding="10dp"
              android:paddingRight="5dp"
              android:text="加入清单"
              android:textColor="@color/white"
              android:textSize="16sp" />

          <ProgressBar
              android:id="@+id/progressBar1"
              style="?android:attr/progressBarStyleHorizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="15dp" />
          
    </RelativeLayout>

  

</RelativeLayout>