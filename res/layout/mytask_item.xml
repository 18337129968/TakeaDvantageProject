<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp" >

        <ImageView
            android:id="@+id/activity_imageview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/activity" />

        <TextView
            android:id="@+id/mytask_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="left|center_vertical"
            android:text="111111"
            android:textColor="#8E8E8E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/exercise_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mytask_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:gravity="left|center_vertical"
            android:text="(送锁活动2015.06.01——2015，07.01)"
            android:textColor="#994056"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mytask_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/mytask_name"
            android:gravity="left|center_vertical"
            android:text="22222222"
            android:textColor="#8E8E8E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/to_invite"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/come_btn"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="3333"
            android:textColor="@color/about_company"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>