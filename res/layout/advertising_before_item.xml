<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/merchant_publishing_transparent_float"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:id="@+id/advert_image_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/merchant_publishing_imgbox_bigger"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp" >

        <ImageView
            android:id="@+id/advert_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white" >

            <TextView
                android:id="@+id/advert_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IPONE6 PULS"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/advert_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核中"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/advert_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="2015/4/26"
                android:textColor="@color/white" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>