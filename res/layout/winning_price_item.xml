<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/mymsg_grey_transparent_float" >

    <ImageView
        android:id="@+id/imv_wImageView"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/earn_points_bac"
        android:padding="10dp" />

    <TextView
        android:id="@+id/tv_wName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imv_wImageView"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_wTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_wName"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/imv_wImageView"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:text="中奖"
        android:textColor="@color/red" />

</RelativeLayout>