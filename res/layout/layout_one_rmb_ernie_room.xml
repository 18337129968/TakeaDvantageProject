                            android:text="IPHONE6PLUS"
                            android:textColor="#AA8865"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/meal2_prize1_text"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center|top"
                            android:text="一等奖 1人"
                            android:textColor="#AA8865"
                            android:textSize="12sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_margin="2dp"
                            android:layout_weight="8"
                            android:background="@drawable/phone_card_list_background"
                            android:padding="5dp" >

                            <ImageView
                                android:id="@+id/meal2_prize2_img"
                                android:layout_width="match_parent"
