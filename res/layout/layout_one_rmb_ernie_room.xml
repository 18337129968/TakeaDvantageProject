                            android:padding="5dp" >

                            <ImageView
                                android:id="@+id/meal3_prize2_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_2" />
