<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="common_red_button">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#E7B9B2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_red_bg_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="common_false_button">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#C4C4C4</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_false_bg_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>

    <style name="TransparentDialog">
        <item name="android:windowBackground">@color/transparent_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@+android:style/Animation.Dialog</item>
    </style>

    <style name="HomeDialText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxWidth">40dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">30dip</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="common_white_button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff888888</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_grey_bg_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="common_red_button_pop">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/btn_red_bg_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="MyProgressDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明  <item name="android:windowContentOverlay">@null</item> -->
        <item name="android:windowAnimationStyle">@+android:style/Animation.Dialog</item>

        <!-- 窗口样式Dialog -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <style name="pop_menu_animation" parent="@android:Animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/menu_up</item>
    </style>

    <style name="my_basicInfomationStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textColor">#B3B3B3</item>
        <item name="android:textSize">@dimen/my_basic_infomation_text_size</item>
    </style>

    <style name="my_basicInfomationjiantouStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:drawableRight">@drawable/mygoodsaddress_btn_more</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/my_basic_infomation_text_hint</item>
        <item name="android:text">@string/no_setting</item>
    </style>

    <style name="my_basicInfomationRelativeLayouttyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">@dimen/btn_padding_size</item>
        <item name="android:background">#262827</item>
    </style>

    <style name="completed_btn">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">#575757</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#A8A8A8</item>
        <item name="android:text">已完成</item>
    </style>

    <style name="showprice_grade">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_bg</item>
    </style>

    <style name="wheel_img">
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="lock_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lock_text_1</item>
