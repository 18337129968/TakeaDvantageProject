    <style name="lock_pay_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lock_pay_text</item>
    </style>

    <style name="lock_pay_text2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lock_pay_text2</item>
    </style>

    <style name="yiyuan_ernie_code_img">
        <item name="android:layout_width">33dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="yiyuan_ernie_code_img2" parent="@style/yiyuan_ernie_code_img">
